{
	"name": "multi-semantic-release",
	"author": "Dave Houlbrooke <dave@shax.com>",
	"version": "0.0.0-semantically-released",
	"license": "0BSD",
	"engines": {
		"node": ">=16 || ^14.17",
		"yarn": ">=1.0.0"
	},
	"main": "lib/multiSemanticRelease.js",
	"exports": {
		".": {
			"import": "./lib/index.mjs",
			"require": "./lib/multiSemanticRelease.js"
		}
	},
	"bin": {
		"multi-semantic-release": "./bin/cli.mjs"
	},
	"files": [
		"README.md",
		"CHANGELOG.md",
		"lib",
		"bin"
	],
	"scripts": {
		"watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watchAll",
		"lint": "eslint ./",
		"lint:fix": "eslint --fix ./",
		"test": "yarn lint && yarn test:unit",
		"test:unit": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
		"audit:fix": "npm_config_yes=true npx yarn-audit-fix",
		"publish": "semantic-release"
	},
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"jest": {
		"setupFilesAfterEnv": ["<rootDir>/test/helpers/jestSetupEnv.js"],
		"testEnvironment": "node",
		"testEnvironmentOptions": {
			"url": "http://localhost"
		},
		"testTimeout": 10000,
		"collectCoverage": true,
		"collectCoverageFrom": [
			"lib/**/*.js"
		],
		"modulePathIgnorePatterns": [
			"<rootDir>/test/fixtures"
		]
	},
	"dependencies": {
		"@manypkg/get-packages": "^1.1.3",
		"blork": "^9.3.0",
		"cosmiconfig": "^7.0.1",
		"debug": "^4.4.3",
		"detect-indent": "^6.1.0",
		"detect-newline": "^3.1.0",
		"execa": "^4.1.0",
		"get-stream": "^6.0.1",
		"git-log-parser": "^1.2.1",
		"globby": "11.0.4",
		"lodash": "^4.17.21",
		"meow": "^8.1.2",
		"promise-events": "^0.2.4",
		"semantic-release": ">=19.0.5",
		"semver": "^7.5.2",
		"signale": "^1.4.0",
		"stream-buffers": "^3.0.3",
		"unixify": "^1.0.0"
	},
	"devDependencies": {
		"@commitlint/config-conventional": "^17.0.3",
		"commitlint": "^17.0.3",
		"coveralls": "^3.1.1",
		"eslint": "^8.22.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.2.1",
		"file-url": "^3.0.0",
		"husky": "^4.3.8",
		"jest": "^29.0.0",
		"prettier": "^2.7.1",
		"tempy": "^1.0.1"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/dhoulb/multi-semantic-release.git"
	},
	"bugs": {
		"url": "https://github.com/dhoulb/multi-semantic-release/issues"
	}
}
